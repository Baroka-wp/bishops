<span id="follow_form_<%= user.id %>">
  <% unless current_user.following?(user) %>
      <%= form_with(model: current_user.active_relationships.build(followed_id: user.id))  do |f| %>
        <%= f.hidden_field :followed_id %>
        <%= f.submit "add to my network",class:"btn btn-sm btn-success addfollow" %>
      <% end %>
    <% else %>
      <%= pluralize(user.followers.count, "follower")%>
      <small class="badge badge-info"><%= user.name %> belong to your network </small>
  <% end %>
</span>
