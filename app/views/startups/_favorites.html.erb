<span id="favorites">
  <% if user_signed_in? %>
    <% unless @startup.user_id == current_user.id %>
      <% if @favorite.present? %>
        <span> <em> -- you're yet promoted --</em></span>
      <% else %>
      <%= link_to 'PROMOTE', favorites_path(startup_id: @startup.id),  method: :post, class:" addpromote btn btn-sm btn-info"%>
       <% end %>
     <% end %>
   <% end %>
</span>
