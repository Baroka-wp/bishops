<div class="container">
  <div class="row">
    <div class="col-lg-2 col-md-3">
      <table class="table table-bordered table-hover">
        <tbody>
          <tr>
            <td><%= image_tag @startup.logo_thumbnail,style: 'width:100%;'%></td>
          </tr>
          <tr>
            <td>name: <strong><%= @startup.name %></td>
           </tr>
           <tr>
             <td><strong><%= @startup.sector_of_business %></strong> statup</td>
          </tr>
          <tr>
            <td class="bi bi-person-lines-fill"> contact : <strong><%= @startup.contact %></td>
           </tr>
            <tr>
              <td><i class="fas fa-map-marker-alt"></i><%= @startup.adresse %></td>
           </tr>
           <tr>
             <td> Addresse : <strong><%= @startup.adresse %> </strong></td>
          </tr>
           <tr>
             <td>
               <%= link_to "Owener profile", user_path(@startup.user.id), class:"btn btn-outline-info my-2 my-sm-0" %>
             </td>
           </tr>
      </tbody>
    </table>
    </div>
    <div class="offset-1 col-lg-9 col-md-7">
      <p><image controls width="100%" height="auto" src="<%= @startup.banner_thumbnail %>"></image></p>
        <hr>
        <p><%= @startup.resume %></p>
            <%= render 'favorites'%>
            <strong><%=@startup.favorites.count %></strong> <img src="/etoile.png" alt="contributeur (s)" width="25" height="25">
        <hr>
        <div class="embed-responsive embed-responsive-16by9">
          <%= get_video_iframe( @startup.video) %>
        </div>
        <hr>
        <% if user_signed_in? && current_user.id == @startup.user_id %>
            <%= link_to 'edit Statut', edit_startup_path(@startup.id),class:"btn btn-sm btn-info" %>
            <%= link_to 'Delete Startup', startup_path(@startup.id), method: :delete, data: { confirm: 'Are you sure?'},class:"btn btn-sm btn-danger" %>
        <% end %>
        <hr>
        <div class="text-center">
          <h4 >Give your opinion on this startup</h4>
          <small>You can participate in the development of this startup's idea by <br>
            giving advice, remarks, and why not some good ideas to grow.</small>
            <hr>
            <%= render partial: 'comments/form', locals: { comment: @comment, startup: @startup } %>
          </div>
            <div id="comments_area">
                <%= render partial: 'comments/index', locals: { comments: @comments, startup: @startup } %>
            </div>
        </div>
      </div>
  </div>
