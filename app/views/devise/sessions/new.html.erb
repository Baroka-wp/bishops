<div class="container">
        <div class="offset-4 col-md-4 offset-4">
          <h2>Log in</h2>
          <hr>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"your user email" %>
            </div>
            <br>
            <div class="field">
              <%= f.password_field :password, autocomplete: "current-password", placeholder:"your user email" %>
            </div>
            <br>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <br>
            <div class="actions">
              <%= f.submit "Log in",class:"btn btn-sm btn-info" %>
            </div>
          <% end %>
          <hr>
          <%= render "devise/shared/links" %>
</div>
</div>
